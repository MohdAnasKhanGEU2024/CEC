#include<iostream>
using namespace std;

int fibonacci(int n)
{
    if(n<=1)return n;
    
    return fibonacci(n-1) + fibonacci(n-2);
}

int main()
{
    int num = 0;
    while(1)
    {
        cout<<"Enter Number: ";
        cin>>num;
        cout<<"Ans is: "<<fibonacci(num)<<endl;
    }
    return 0;
}
