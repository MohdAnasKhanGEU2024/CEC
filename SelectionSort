

#include<iostream>
using namespace std;


void SelectionSort(int arr[], int n)
{
    int i = 0, j = 0,k = 0;
    
    for(i = 0; i < n-1; i++)
    {
        for(j = i, k = i; j < n; j++)
        {
            if(arr[j]<arr[k])
            {
               k = j;
            }
        }
        int temp = arr[i] ;
        arr[i] = arr[k];
        arr[k] = temp;
    }
}

int main()
{
    int arr[] = {5,4,8,1,2,3,9,6};
    int n = sizeof(arr)/sizeof(arr[0]);
    SelectionSort(arr,n);
    for(int i = 0; i < n; i++)
    {
        cout<<arr[i]<<" ";
    }
    return 0;
}
